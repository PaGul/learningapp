<%= form_for(current_user.relationships.build(followed_id: @user.id), remote: true) do |f| %> 
<!--current_user обращается к Relationship c помощью внешнего ключа follower_id. @user-пользователь,которого посетили-->
  <div><%= f.hidden_field :followed_id %></div>
  <%= f.submit "Follow", class: "btn btn-large btn-primary" %>
<% end %> <!--отправляет POST запрос к контроллеру Relationships для create взаимоотношения-->